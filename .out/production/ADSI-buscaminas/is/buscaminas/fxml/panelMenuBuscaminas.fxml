<?xml version="1.0" encoding="UTF-8"?>

<?import is.buscaminas.view.uiElements.VistaContador?>
<?import is.buscaminas.view.uiElements.VistaEmoji?>
<?import is.buscaminas.view.uiElements.VistaMarcadas?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.*?>
<GridPane fx:id="background" xmlns:fx="http://javafx.com/fxml/1" alignment="CENTER" hgap="5.0"
          style=" -fx-background-insets:0 0 0 0, 4 0 0 4, 4;" BorderPane.alignment="CENTER" xmlns="http://javafx.com/javafx/10.0.2-internal"
          fx:controller="is.buscaminas.view.FXMLControllers.PanelMenuBuscaminasController">
    <columnConstraints>
        <ColumnConstraints fillWidth="false" halignment="LEFT" hgrow="SOMETIMES" percentWidth="25.0"/>
        <ColumnConstraints fillWidth="false" halignment="CENTER" hgrow="SOMETIMES"/>
        <ColumnConstraints fillWidth="false" halignment="RIGHT" hgrow="SOMETIMES" percentWidth="25.0"/>
    </columnConstraints>

    <rowConstraints>
        <RowConstraints fillHeight="false" valignment="CENTER" vgrow="SOMETIMES"/>
    </rowConstraints>

    <VistaMarcadas GridPane.columnIndex="0"/>
    <HBox spacing="15.0" GridPane.columnIndex="1" GridPane.valignment="CENTER">
        <Button fx:id="botonRanking" focusTraversable="false" maxHeight="35" maxWidth="35" minHeight="35" minWidth="35" onAction="#mostrarRanking"/>
        <VistaEmoji GridPane.columnIndex="1" onAction="#reiniciar" focusTraversable="false"/>
        <Button fx:id="botonAyuda" focusTraversable="false" maxHeight="35" maxWidth="35" minHeight="35" minWidth="35" onAction="#mostrarAyuda"/>
    </HBox>
    <VistaContador GridPane.columnIndex="2"/>

    <padding>
        <Insets bottom="7.0" left="7.0" right="7.0" top="7.0"/>
    </padding>

</GridPane>
